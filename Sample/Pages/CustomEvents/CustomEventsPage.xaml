<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Sample.Views"
             x:Class="Sample.Pages.CustomEvents.CustomEventsPage"
             Title="Custom Event">

    <ContentPage.Content>
        <VerticalStackLayout
            HorizontalOptions="FillAndExpand"
            Margin="12"
            Spacing="8">

            <views:CardView>
                <VerticalStackLayout
                    HorizontalOptions="FillAndExpand"
                    Padding="0"
                    Spacing="0">

                    <Button
                        Text="Register Event"
                        Clicked="RegisterCustomEvent"
                        CornerRadius="0" />

                    <views:HorizontalDivider />

                    <Button
                        Text="Register Event with Data"
                        Clicked="RegisterCustomEventWithData"
                        CornerRadius="0" />
                </VerticalStackLayout>
            </views:CardView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
